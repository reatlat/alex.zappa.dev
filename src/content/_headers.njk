permalink: '/_headers'
eleventyExcludeFromCollections: true
---

{# Default #}
/*
	X-Frame-Options: "SAMEORIGIN"
	X-Content-Type-Options: "nosniff"
	X-XSS-Protection: "1; mode=block"
	{%- if eleventy.env.runMode == 'build' -%}Access-Control-Allow-Origin = "{{ build.url or 'https://alex.zappa.dev' }}"{%- endif -%}
	{# Content-Security-Policy = "frame-ancestors 'none';" #}


{# API Endpoint #}
/api/*
	Cache-Control: "max-age=0, no-cache, no-store, must-revalidate"


{# TW Config #}
/tw-config/*
	X-Robots-Tag: "noindex, nofollow"
	Cache-Control: "max-age=0, no-cache, no-store, must-revalidate"


{# Helpers #}
/_*
  X-Robots-Tag: "noindex, nofollow"
  Cache-Control: "max-age=0, no-cache, no-store, must-revalidate"

{# CloudFlare Custom Domain #}
https://:project.pages.dev/*
  X-Robots-Tag: noindex

https://alex-zappa-dev.pages.dev*
  Link: <https://alex-zappa-dev.pages.dev/:splat>; rel="canonical"
  X-Robots-Tag: noindex
  Refresh: 0; url=https://alex.zappa.dev/:splat
