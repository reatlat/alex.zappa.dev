<h1>
  Am I Responsive?
</h1>

<div id="stage"
     class=""
     x-data="{
        iframeSrc: `about:blank`,
        targetUrl: ``,
        setIframeSrc() {
          this.iframeSrc = 'https://alex.zappa.dev'; //this.targetUrl;
        }
     }"
     x-init="setIframeSrc()">



  <form action="#" :submit.prevent="setIframeSrc()" class="mb-20">
    <label for="targetUrl">URL</label>
    <input type="text" id="targetUrl" @input.debounce.500ms="setIframeSrc()" x-model="targetUrl" placeholder="https://example.com">
  </form>

    <div class="">

      <div class="iphone flex justify-center items-center relative [&_picture]:absolute [&_img]:m-0"
           style="width: 130px; height: 266px">
        <div class="absolute z-10 bg-terminal w-10 h-2.5 rounded-full top-2">
          <div class="rounded-full bg-gradient-to-b from-[#0F1693] via-terminal to-[#0F1693] size-1 absolute right-1" style="top:3px"></div>
        </div>
        {% image "./iphone.png", "iPhone 15Pro", [450], "m-0" %}
        <iframe src="about:blank"
                class="absolute m-0 p-0 scale-[0.3] no-scrollbar"
                style="border-radius: 52px"
                :src="iframeSrc" width="393" height="852"></iframe>
      </div>

      <div class="ipad flex justify-center items-center relative [&_picture]:absolute [&_img]:m-0"
           style="width: 250px; height: 345px;">
        {% image "./ipad.png", "iPad Pro", [600], "m-0" %}
        <iframe src="about:blank"
                class="absolute m-0 mt-1 p-0 scale-[0.243] no-scrollbar"
                style="border-radius: 50px"
                :src="iframeSrc" width="954" height="1330"></iframe>
      </div>

      <div class="imac hidden flex justify-center items-center relative [&_picture]:absolute [&_img]:m-0">
        {% image "./imac.png", "iMac", [900], "m-0" %}
        <iframe src="about:blank"
                class="absolute m-0 p-0 scale-[0.3] no-scrollbar"
                style="border-radius: 52px"
                :src="iframeSrc" width="393" height="852"></iframe>
      </div>

      <div class="macbook hidden flex justify-center items-center relative [&_picture]:absolute [&_img]:m-0">
        {% image "./macbook.png", "MacBook Pro", [450], "m-0" %}
        <iframe src="about:blank"
                class="absolute m-0 p-0 scale-[0.3] no-scrollbar"
                style="border-radius: 52px"
                :src="iframeSrc" width="393" height="852"></iframe>
      </div>

    </div>


</div>
